{
  "name": "react-mobx-boilerplate",
  "version": "0.0.1",
  "description": "A react boilerplate project featuring webpack 2, HMR, code splitting, mobx, SSR",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development node webpack/webpack-dev-server --env.dev",
    "build": "rm -Rf build/* && tcm src && npm run build-browser && npm run build-node",
    "css:watch": "tcm src -w",
    "build-browser": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.js --progress --env.prod",
    "build-node": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.node.js --progress --env.dev",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mosho1/react-mobx-boilerplate.git"
  },
  "author": "Sharon Rolel <sharonrolel@gmail.com>",
  "homepage": "https://github.com/Mosho1/react-mobx-boilerplate",
  "dependencies": {
    "mobx": "4.3.1",
    "mobx-react": "5.2.3",
    "mobx-state-tree": "2.2.0",
    "node-uuid": "1.4.8",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-draggable": "3.0.5",
    "ws": "5.2.1"
  },
  "devDependencies": {
    "@types/jest": "23.1.4",
    "@types/node": "10.5.1",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "autoprefixer": "8.6.4",
    "awesome-typescript-loader": "5.2.0",
    "connect-history-api-fallback": "1.5.0",
    "cross-env": "5.2.0",
    "css-loader": "0.28.11",
    "express": "4.16.3",
    "express-history-api-fallback": "2.2.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.3.0",
    "mini-css-extract-plugin": "0.4.1",
    "mobx-react-devtools": "5.0.1",
    "opn": "5.3.0",
    "postcss": "6.0.23",
    "postcss-loader": "2.1.5",
    "style-loader": "0.21.0",
    "ts-jest": "23.0.0",
    "tslib": "1.9.3",
    "typed-css-modules": "0.3.4",
    "typescript": "2.9.2",
    "url-loader": "1.0.1",
    "webpack": "4.15.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.2"
  }
}
